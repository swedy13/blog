section.home-companies#home-companies
  .home-companies-row
    .home-companies-title case studies
    |{% for post in site.categories.companies reversed %}
    .home-companies-logo-thumb
      span.home-companies-centered
        a(class="home-companies-logo {{post.title}}" href="{{post.url}}" style="background-image: url(assets/img/posts/thumbnails/{{post.thumbnail}})")
        p.home-companies-caption {{post.title}}
    |{% endfor %}