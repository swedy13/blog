.articles
  display flex
  justify-content center
  
  .articles-container
    display flex
    flex-direction column
    width 700px
    margin 25px 0

    .articles-title
      display none
      margin-bottom 15px
      font-size 2em
      font-weight 300
      color #444
      text-align center
    
    .article
      display flex
      visibility hidden
      padding 25px 15px
      animation-duration 1s

      &:hover
        background-color lightgoldenrodyellow
        transition .7s background-color

      .article-image
        display block
        height 100px
        width 100px
        padding 5px
        border 2px solid lightgray
        border-radius 5px
        filter grayscale(1)
        background-color white
        background-image url(/assets/img/posts/thumbnails/prototyping.jpg)
        background-size auto 100%
        background-repeat no-repeat
        background-position center

      .article-content
        width 100%
        padding 0 8px
        
        .article-title
          font-size 1.4em
          font-weight 300
          color #444
          transition .3s
            
        .article-snippet
          margin-top 7px
  
      &:hover
        .article-image
          filter grayscale(0)
          background-size auto 105%
          transform rotate(-2.5deg)
          transition .3s
        
    hr
      display block
      margin 1px
      border none
      border-top 2px dashed lightgray

    li
      &:last-child
        display none
    
    .articles-more
      display flex
      justify-content center

      p
        margin-top 15px
        padding 10px 30px
        background-color transparent
        border 1px solid #d5d5d5
        border-radius 1px
        font-size 1.3em
        font-weight 300
        color #999

        &:hover
          font-weight 400
          background-color #e1e1e1
          border-color transparent
          transition .35s