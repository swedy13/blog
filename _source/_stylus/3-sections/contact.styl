.contact
  background-color #e1e1e1

  .social-row
    position relative
    display flex
    width 100%
    justify-content center
    
    h2.head
      position absolute
      top 0
      bottom 0
      left 0
      font-size 2em
      font-weight 300
      color #e1e1e1
      
    .link
      display flex
      align-items center
      justify-content center
      height 70px
      width 70px
      margin 25px
      border-radius 100%
      transition .5s

      .contact-caption
        z-index 1
        display none
        position absolute
        margin-top 25px
        margin-left 15px
        padding 2px 6px
        background-color palegoldenrod
        border 1px solid burlywood

      &.upwork
        img
          margin-top 7px

      &.linkedin
        img
          margin-bottom 2px

      img
        height 45px
        width 45px
        filter brightness(.4)

      &:hover
        box-shadow 1px 1px 1px #aaa

        .contact-caption
          display block

        img
          filter brightness(1) drop-shadow(-1px -1px 0 #777)

        &.upwork
          background-color #6fda44
         
        &.linkedin
          background-color #0274b3

        &.skype
          background-color #00adef
  
        &.email
          background-color white