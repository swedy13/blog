.portfolio
  background-color #1c1c1c

  .title-row
    display flex
    align-items baseline
    margin-bottom -20px
    
    h2.head
      display inline-block
      padding 8px 0 0 8px
      font-size 2em
      font-weight 300
      color #e1e1e1

    a.more
      display inline-block
      margin-left auto
      margin-right 10px
      padding 3px 8px
      border 1px solid #e1e1e1
      border-radius 2px
      font-size .9em
      font-weight 300
      color #e1e1e1
      cursor pointer

  .slider
    display flex
    flex-wrap wrap
    justify-content center
    padding 30px 5px
    overflow hidden