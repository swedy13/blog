// FOUR COLUMN
@media screen and (min-width: 548px)

  // Container
  .portfolio-container
    display flex
    align-items center
    width 25%

  // Portfolio Link Card
  .portfolio-link
    display flex
    align-items center
    justify-content center
    position relative
    height 300px
    width 100%
    min-width 250px
    background-color #1c1c1c
    border 2px solid #e1e1e1
    font-size 2em
    font-weight 300
    color #e1e1e1

    &:hover
      background-color rgba(83, 78, 120, 1)
      color #e1e1e1
      text-shadow 0 1px 1px #333
      transition background-color .25s
      cursor pointer

    &.portfolio-more
      visibility hidden
      width calc(100% - 10px)
      margin-top 4px
      margin-left 5px
      
  // Card
  .portfolio-card, .portfolio-front, .portfolio-back
    display block
    height 300px
    width 100%
    min-width 250px
  
  .portfolio-card
    visibility hidden
    position relative
    margin 5px
    perspective 1000
  
    &:hover .portfolio-flipper
      transform: rotateY(180deg);
  
  // Flip Animation
  .portfolio-flipper
    transition 0.35s
    transform-style preserve-3d
    position relative
  
  .portfolio-front, .portfolio-back
    backface-visibility hidden
    position absolute
  
  .portfolio-front
    z-index 2
    transform rotateY(0deg)
  
  .portfolio-back
    transform rotateY(180deg)
  
  // Front
  .portfolio-front
    .portfolio-head
      z-index 1
      position absolute
      width 100%
      bottom -4px
      left 0
      right 0
      padding .5em
      padding-bottom .75em
      background-color #111
      opacity .7
      font-size 1.2em
      font-weight 300
      color white
      text-align center
  
    .portfolio-link
      display block
      height 100%
      width 100%
      background-size 375px
      background-position center
      background-repeat no-repeat

      &.Wireframing
        background-size 450px
        background-position center right
        
      &.Mockups
        background-size 450px
        background-position center left
  
  // Back
  .portfolio-back
    cursor default
    
    .portfolio-cap
      position absolute
      top 0
      bottom -4px
      left 0
      right -4px
      padding .5em
      background-color rgba(83, 78, 120, 1)
      color #e1e1e1
  
      .portfolio-head
          font-size 1em
          text-align center
          font-weight 500
    
      .portfolio-divider
        width 100%
        margin 6px -3px 5px -3px
        
      .portfolio-description
        font-size .9em
        line-height 1.4
  
      .portfolio-button
        padding: 2px 10px
        margin 2px
        background-color: #eee
        border: 1px solid #ddd
        border-radius: 3px
        font-size .9em
        font-weight 500
        color: #333
        float: right


// THREE COLUMN
@media screen and (max-width: 1100px)

  // Container
  .portfolio-container
    min-width 33%

  .portfolio-container:nth-child(4n+3)
    display none


// TWO COLUMN
@media screen and (max-width: 850px)

  // Container
  .portfolio-container
    min-width 50%

  .portfolio-container:nth-child(3n+1)
    display none
    

// SINGLE COLUMN
@media screen and (max-width: 548px)

  // Container
  .portfolio-container
    min-width 100%
    margin-bottom 30px

  // Portfolio Link Card
  .portfolio-link
    display flex
    opacity 0
    align-items center
    justify-content center
    position relative
    right -50px
    height 3em
    width 95vw
    min-width 250px
    background-color #1c1c1c
    border 2px solid #e1e1e1
    font-size 1.7em
    font-weight 300
    color #e1e1e1

    &:hover
      background-color #e1e1e1
      box-shadow 0 0 1px 2px #e1e1e1
      font-size 1.8em
      font-weight 500
      color rgba(83, 78, 120, 1)
      text-decoration underline

  // Card
  .portfolio-card
    width 95vw
    min-width 250px
  
  // Front
  .portfolio-front  
    .portfolio-link
      display block
      height 250px
      width 100%
      background-image url('../img/home/portfolio.jpg')
      background-size cover
      background-position center

  .portfolio-back
    h3.portfolio-head
      position absolute
      width 100%
      margin-top -250px
      padding: 6px 0 10px;
      color: #e1e1e1;
      text-align: center;
      text-shadow 0px 2px 2px #333
      background-color: rgba(83, 78, 120, .75)
      box-shadow 0 2px 6px 2px #333

    .portfolio-divider
      display none

    .portfolio-description
      position absolute
      width 100%
      margin-top -32px
      padding 6px
      background-color: rgba(225, 225, 225, .85)
      border-top 1px solid #aaa
      box-shadow 0 -2px 2px #aaa

    .portfolio-button
      display none
