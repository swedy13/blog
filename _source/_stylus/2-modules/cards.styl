// FOUR COLUMN
@media screen and (min-width: 548px)

  // Container
  .container
    display flex
    align-items center
    width 25%

  // Portfolio Link Card
  .portfolio-link
    display flex
    opacity 0
    align-items center
    justify-content center
    position relative
    right -50px
    height 300px
    width 100%
    min-width 250px
    margin 5px
    background-color #1c1c1c
    border 2px solid #e1e1e1

    &:hover
      background-color rgba(83, 78, 120, 1)
      transition background-color .25s
      cursor pointer

      a
        color #e1e1e1
        text-shadow 0px 1px 1px #333

    a
      font-size 2em
      font-weight 300
      color #e1e1e1
      
  // Card
  .card, .front, .back
    display block
    height 300px
    width 100%
    min-width 250px
  
  .card
    opacity 0
    right -50px
    position relative
    margin 5px
    perspective 1000
  
    &:hover .flipper
      transform: rotateY(180deg);
  
  // Flip Animation
  .flipper
    transition 0.35s
    transform-style preserve-3d
    position relative
  
  .front, .back
    backface-visibility hidden
    position absolute
  
  .front
    z-index 2
    transform rotateY(0deg)
  
  .back
    transform rotateY(180deg)
  
  // Front
  .front
    h3.head
      z-index 1
      position absolute
      top 0
      left 0
      right 0
      padding .5em
      font-weight 500
      color #333
      text-align center
  
    a.link
      display block
      height 100%
      width 100%
      background-size cover
      background-position top center
  
  // Back
  .back
    cursor default
    
    .cap
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      padding .5em
      background-color rgba(83, 78, 120, 1)
      color #e1e1e1
  
      h3.head
          font-size 1em
          text-align center
          font-weight 500
    
      hr
        width 100%
        margin 6px -3px 5px -3px
        
      p.desc
        font-size .9em
        line-height 1.4
  
      button.button
        padding: 2px 10px
        margin 2px
        background-color: #eee
        border: 1px solid #ddd
        border-radius: 3px
        font-size .9em
        font-weight 500
        color: #333
        float: right


// THREE COLUMN
@media screen and (max-width: 1100px)

  // Container
  .container
    min-width 33%

  .container:nth-child(4n+3)
    display none


// TWO COLUMN
@media screen and (max-width: 850px)

  // Container
  .container
    min-width 50%

  .container:nth-child(3n+1)
    display none
    

// SINGLE COLUMN
@media screen and (max-width: 548px)

  // Container
  .container
    min-width 100%
    margin-bottom 30px

  // Portfolio Link Card
  .portfolio-link
    display flex
    opacity 0
    align-items center
    justify-content center
    position relative
    right -50px
    height 3em
    width 95vw
    min-width 250px
    background-color #1c1c1c
    border 2px solid #e1e1e1

    &:hover
      background-color #e1e1e1
      box-shadow 0 0 1px 2px #e1e1e1

      a
        font-size 1.8em
        font-weight 500
        color rgba(83, 78, 120, 1)
        text-decoration underline

    a
      font-size 1.7em
      font-weight 300
      color #e1e1e1

  // Card
  .card
    width 95vw
    min-width 250px
  
  // Front
  .front  
    .link
      display block
      height 250px
      width 100%
      background-image url('../img/home/portfolio.jpg')
      background-size cover
      background-position center

  .back
    h3.head
      position absolute
      width 100%
      margin-top -250px
      padding: 6px 0 10px;
      color: #e1e1e1;
      text-align: center;
      text-shadow 0px 2px 2px #333
      background-color: rgba(83, 78, 120, .75)
      box-shadow 0 2px 6px 2px #333

    hr
      display none

    .desc
      position absolute
      width 100%
      margin-top -32px
      padding 6px
      background-color: rgba(225, 225, 225, .85)
      border-top 1px solid #aaa
      box-shadow 0 -2px 2px #aaa

    button
      display none
